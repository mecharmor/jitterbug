{
  "name": "jitterbug",
  "version": "1.0.6",
  "description": "A lightweight library for building reliable retry behavior in distributed systems and API clients",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "version": "npm run build",
    "integration": "npm --prefix ./examples/basic test"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "retry",
    "retries",
    "retry-engine",
    "retry-logic",
    "backoff",
    "exponential-backoff",
    "linear-backoff",
    "fixed-backoff",
    "jitter",
    "jitter-strategy",
    "decorrelated-jitter",
    "full-jitter",
    "equal-jitter",
    "random-jitter",
    "network",
    "resilience",
    "resilient",
    "api-client",
    "distributed-systems",
    "typescript",
    "utility",
    "async"
  ],
  "author": "Cory Lewis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mecharmor/jitterbug.git"
  }
}
